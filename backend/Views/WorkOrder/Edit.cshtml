@model backend.ViewModels.WorkOrderEditViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Munkalap szerkesztése";
    var currentUser = UserManager.GetUserAsync(User).Result;
    var userRoles = UserManager.GetRolesAsync(currentUser).Result;
    var isAdmin = userRoles.Contains("Admin");
    var isMechanic = userRoles.Contains("Mechanic");
}

<h2>Munkalap szerkesztése</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="WorkOrderId" />

    <div class="form-group">
        <label asp-for="AppointmentTime" class="control-label"></label>
        <input asp-for="AppointmentTime" class="form-control" />
        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success mt-3">Mentés</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Vissza</a>
</form>