@model backend.DTOs.WorkOrderDetails
@using Microsoft.AspNetCore.Identity
@using backend.Models
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Munkalap részletei";
    var currentUser = UserManager.GetUserAsync(User).Result;
    var userRoles = UserManager.GetRolesAsync(currentUser).Result;
    var isAdmin = userRoles.Contains("Admin");
    var isMechanic = userRoles.Contains("Mechanic");
}

<div class="container mt-4">
    <h2>Munkalap részletei</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Alap információk</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Munkalap azonosító:</dt>
                        <dd class="col-sm-8">@Model.WorkOrderId</dd>

                        <dt class="col-sm-4">Időpont:</dt>
                        <dd class="col-sm-8">@Model.AppointmentTime.ToString("yyyy.MM.dd. HH:mm")</dd>
                        @if (Model.IsActive == true && isAdmin)
                        {
                            <form method="post" asp-action="UpdateAppointmentTime">
                                <input type="hidden" name="workOrderId" value="@Model.WorkOrderId" />
                                <label>Időpont módosítása:</label>
                                <input type="datetime-local" name="appointmentTime" value="@Model.AppointmentTime.ToString("yyyy-MM-ddTHH:mm")" class="form-control" />
                                <button type="submit" class="btn btn-sm btn-outline-primary mt-2">Mentés</button>
                            </form>

                        }
                        <dt class="col-sm-4">Státusz:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.IsActive == true ? "bg-success" : "bg-danger")">
                                @(Model.IsActive == true ? "Aktív" : "Inaktív")
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Gépjármű adatok</h5>
                </div>
                <div class="card-body">
                    @if (Model.Car != null)
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Rendszám:</dt>
                            <dd class="col-sm-8">@Model.Car.LicencePlate</dd>

                            <dt class="col-sm-4">Gyártó:</dt>
                            <dd class="col-sm-8">@Model.Car.Manufacturer</dd>

                            <dt class="col-sm-4">Típus:</dt>
                            <dd class="col-sm-8">@Model.Car.Type</dd>

                            @if (!string.IsNullOrEmpty(Model.Car.VINnumber))
                            {
                                <dt class="col-sm-4">Alvázszám:</dt>
                                <dd class="col-sm-8">@Model.Car.VINnumber</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Car.EngineNumber))
                            {
                                <dt class="col-sm-4">Motorszám:</dt>
                                <dd class="col-sm-8">@Model.Car.EngineNumber</dd>
                            }
                        </dl>
                    }
                    else @if (Model.IsActive == true && isAdmin)
                    {
                        <form method="post" asp-action="UpdateCarDetails">
                            <p class="text-muted">Hiányzó gépjármű adatok!</p>
                            <input type="hidden" name="workOrderId" value="@Model.WorkOrderId" />
                            <input type="hidden" name="carId" value="@Model.Car?.CarId" />
                            <label>Rendszám:</label>
                            <input class="form-control" name="LicencePlate" value="@Model.Car?.LicencePlate" />
                            <label>Gyártó:</label>
                            <input class="form-control" name="Manufacturer" value="@Model.Car?.Manufacturer" />
                            <label>Típus:</label>
                            <input class="form-control" name="Type" value="@Model.Car?.Type" />
                            <label>Alvázszám:</label>
                            <input class="form-control" name="VINnumber" value="@Model.Car?.VINnumber" />
                            <label>Motorszám:</label>
                            <input class="form-control" name="EngineNumber" value="@Model.Car?.EngineNumber" />
                            <button type="submit" class="btn btn-sm btn-outline-primary mt-2">Mentés</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">Nincs gépjármű hozzárendelve</p>
                    }

                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Kapcsolattartók</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Ügyfél</h6>
                            @if (Model.Client != null)
                            {
                                <p>@Model.Client.LastName @Model.Client.FirstName</p>
                                <p>@Model.Client.PostalCode @Model.Client.City</p>
                                <p>@Model.Client.Street @Model.Client.HouseNo</p>
                                <p>Email: @Model.Client.Email </p>
                                <p>Telefonszám:  @Model.Client.PhoneNumber</p>

                            }
                            else
                            {
                                <p class="text-muted">Nincs ügyfél hozzárendelve</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h6>Szerelő</h6>
                            @if (Model.Mechanic != null)
                            {
                                <p>@Model.Mechanic.LastName @Model.Mechanic.FirstName</p>
                                <p>Telefonszám:  @Model.Mechanic.PhoneNumber </p>
                            }
                            else
                            {
                                <p class="text-muted">Nincs szerelő hozzárendelve</p>
                            }
                            @if (Model.IsActive == true && isAdmin)
                            {
                                <form method="post" asp-action="UpdateMechanic">
                                    <input type="hidden" name="workOrderId" value="@Model.WorkOrderId" />
                                    <label>Új szerelő hozzárendelése:</label>
                                    <select name="mechanicId" class="form-select">
                                        <option value="" selected="@(Model.Mechanic == null ? "selected" : null)">-- Válassz szerelőt --</option>
                                        @foreach (var mechanic in (List<SelectListItem>)ViewBag.Mechanics)
                                        {
                                            <option value="@mechanic.Value" selected="@(mechanic.Value == Model.Mechanic?.Id ? "selected" : null)">
                                                @mechanic.Text
                                            </option>
                                        }
                                    </select>
                                    <button class="btn btn-sm btn-outline-primary mt-2" type="submit">Frissítés</button>
                                </form>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Szolgáltatások</h5>
                </div>
                <div class="card-body">
                    @if (Model.Services != null && Model.Services.Any())
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Szolgáltatás</th>
                                    <th>Időtartam (perc)</th>
                                    <th>Ár (Ft)</th>
                                    <th>Státusz</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var service in Model.Services)
                                {
                                    <tr>
                                        <td>@service.ServiceName</td>
                                        <td>@service.ServiceDurationMinutes</td>
                                        <td>@service.ServicePrice.ToString("N0") Ft</td>
                                        <td>
                                            @if (Model.IsActive == true && (isAdmin || isMechanic))
                                            {
                                                <form asp-controller="WorkOrder" asp-action="UpdateServiceStatus" method="post" class="d-flex align-items-center">
                                                    <input type="hidden" name="workOrderServiceId" value="@service.WorkOrderServiceId" />
                                                    <select name="newStatus" class="form-select form-select-sm me-2">
                                                        @foreach (var status in Enum.GetNames(typeof(backend.Models.WorkOrderServiceStatus)))
                                                        {
                                                            <option value="@status" selected="@(status == service.Status ? "selected" : null)">@status
                                                            </option>
                                                        }
                                                    </select>
                                                    <button type="submit" class="btn btn-sm btn-outline-success">✔</button>
                                                </form>
                                            }
                                            else
                                            {
                                                @switch (service.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">Függőben</span>
                                                        break;
                                                    case "InProgress":
                                                        <span class="badge bg-info">Folyamatban</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-success">Befejezve</span>
                                                        break;
                                                    case "Cancelled":
                                                        <span class="badge bg-danger">Törölve</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@service.Status</span>
                                                        break;
                                                }
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="2" class="text-end">Összesen:</th>
                                    <th>@Model.Services.Sum(s => s.ServicePrice).ToString("N0") Ft</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    @if (Model.IsActive == true && (isAdmin || isMechanic))
                    {
                        <form asp-controller="WorkOrder" asp-action="AddService" method="post" class="mt-3">
                            <input type="hidden" name="workOrderId" value="@Model.WorkOrderId" />
                            <div class="row">
                                <div class="col-md-8">
                                    <select id="serviceDropdown" name="serviceId" class="form-select"></select>
                                </div>
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-primary">Hozzáadás</button>
                                </div>
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
        @if (isMechanic || isAdmin)
    {
        //TODO RENDELÉS NYOMONKÖVETÉS
    }

 
    @if (Model.IsActive == true && isMechanic)
    {
        <div class="card-mt4">
            <div class=" card-header bg-primary text-white">
                <h5 class="mb-0">Alkatrész rendelés</h5>
            </div>
            <div class="card-body">
        <form asp-action="CreatePartOrder" method="post" class="mt-03">
             <div class="mb-4">
                <label class="form-label fw-bold">Kategória</label>
                <select id="categorySelect" class="form-select form-select-lg" required>
                   <option value="">Válassz kategóriát...</option>
                </select>
              </div>
            <div class="mb-4">
                <label class="form-label fw-bold">Árucikk neve</label>
                <input type="text" name="PartName" class="form-control form-control-lg" required/>
            </div>
           <div class="mb-4">
                <label class="form-label fw-bold">Mennyiség</label>
                <input type="number" name="Quantity" min="1" value="1" class="form-control form-control-lg" required />
            </div>
        </form>
        </div>
        </div>
    }


    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Megjegyzések</h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Notes</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "WorkOrder")" class="btn btn-secondary">Vissza a listához</a>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const existingServiceNames = Array.from(document.querySelectorAll('table tbody tr td:first-child'))
                .map(td => td.textContent.trim());

            fetch('/api/ServicesApi/services')
                .then(response => response.json())
                .then(data => {
                    const dropdown = document.getElementById('serviceDropdown');
                    dropdown.innerHTML = '<option value="">-- Válassz szolgáltatást --</option>';

                    data.forEach(service => {
                        if (!existingServiceNames.includes(service.serviceName)) {
                            const option = document.createElement('option');
                            option.value = service.serviceId;
                            option.text = service.serviceName;
                            dropdown.appendChild(option);
                        }
                    });

                    if (dropdown.options.length === 1) {
                        dropdown.innerHTML = '<option value="">Nincs hozzáadható új szolgáltatás</option>';
                    }
                })
                .catch(error => {
                    console.error('Hiba a szolgáltatások lekérésekor:', error);
                });
        });
    </script>
}

