@{
    ViewData["Title"] = "Főoldal";
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary">Üdvözlünk az Autószerelő Applikációban!</h1>
    <p class="lead text-muted">Egyszerű és gyors időpontfoglalás, átlátható szerviztörténet és profi szerelők.</p>
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm hover-card">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">📅 Időpontfoglalás</h5>
                    <p class="card-text">Foglalj időpontot egyszerűen és gyorsan online.</p>
                    <a href="@Url.Action("Book", "Booking")" class="btn btn-primary mt-2">Időpontot foglalok</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm hover-card">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">🚗 Szerviztörténet</h5>
                    <p class="card-text">Kövesd nyomon járműved szervizelési előzményeit.</p>
                    a href="@Url.Action("Index", "WorkOrder")" class="btn btn-primary mt-2">Munkalapok megtekintése</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm hover-card">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">🔧 Profi szerelők</h5>
                    <p class="card-text">Tapsztalt szerelők állnak rendelkezésedre.</p>
                </div>
            </div>
        </div>
    </div>
</div>

